<!-- start: .breaking-news -->
<section class="breaking-news hide-on-mobile p-2">
	<div class="grid-15 tablet-grid-20 grid-parent">
		
		<h3 id="breaking-news-title" class="title">EDITORS' PICKS</h3>
	</div>
	<div class="grid-85 tablet-grid-80 grid-parent">
		<div class="slick">
			{{#get "posts" limit="5" include="tags" filter="tags:breaking-news" as |breaking-news|}}
				{{#foreach breaking-news}}
					<div class="slick-item" >
						<article class="item" >
							<a class="hover-effect" href="{{url}}">
								<div class="meta grid-container grid-parent" style="background: url({{feature_image}});background-size: 100%; background-position: center; height:70px;">
									<div class="image-shadow">
									<span class="cover"></span>
                  <script>title("{{title}}", 15, "{{uuid}}")</script>
									<h6 id="title_{{uuid}}"></h6>
									{{#if tags}}
										<div class="tags">
											{{#foreach tags}}<span class="{{slug}}">{{name}}</span>{{/foreach}}
										</div>
									{{/if}}
                  <script>time_ago("{{date format="YYYY-MM-DD HH:mm"}}","{{uuid}}{{@index}}")</script>
									<time id="{{uuid}}{{@index}}" style="margin-bottom: 0px; color:#fff;" datetime="{{date published_at format="YYYY-MM-DD HH:mm"}}"><i class="fa fa-clock-o"></i>{{date}}</time>
									</div>
								</div>
							</a>
						</article>
					</div>
				{{/foreach}}
			{{/get}}	
		</div>
	</div>
</section>
<!-- end: .breaking-news -->
