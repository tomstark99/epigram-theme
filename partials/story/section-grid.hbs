
<article class="story-cover img-hover bg-dark relative min-h-14 h-60 ">
    <div class="h-full relative overflow-hidden">
        {{#if feature_image}}
            <a href="{{url}}">
                <img class=" image-inset absolute img-hover-here"
                    src="{{img_url feature_image size="m"}}"
                    srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w"                    
                    sizes="(max-width: 1000px) 400px, 700px"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
                <span class="bg-cover-gradient absolute zindex2 inset-0 z-2"></span>
            </a>
        {{/if}}

        <header class="absolute z-3 bottom-0 p-4 lg:p-6">
            {{!-- Category and Datetime partials/components/primary-tag.hbs --}}

            {{>primary-tag class="text-white"}}
            
            <h2 class="leading-tight text-white lg:text-xl">
                <a class="block1" href="{{url}}">{{title}}</a>
            </h2>

        </header>
    </div>
</article>