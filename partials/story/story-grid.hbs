<article class="post-box relative overflow-hidden {{#unless feature_image}} flex flex-col justify-center p-5 bg-gray-100 rounded{{/unless}}">
    {{#if feature_image}}
    <figure class="post-box-image relative mb-4 overflow-hidden h-40 bg-gray-150 rounded">
        <a href="{{url}}" class="img-hover">
            <img class="image-inset absolute img-hover-here blur-up lazyload"
                src="{{img_url feature_image size="m"}}"
                srcset="{{img_url feature_image size="xs"}} 100w,{{img_url feature_image size="s"}} 300w,{{img_url feature_image size="m"}} 600w"
                sizes="auto"
                width="350"
                height="160"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"/>
        </a>
    </figure>

    {{/if}}


    <div class="post-box-body">
        {{!-- Category and Datetime partials/components/primary-tag.hbs --}}

        {{> primary-tag }}
        <div>
        <h2 class="post-box-title text-title hover:text-primary mb-3 leading-tight text-lg lineClamp-3">
            <!-- trim long titles (in time.since.js) -->
            <script>titleBody("{{title}}", 10, "{{uuid}}")</script>
            <a href="{{url}}" class="block " id="title_{{uuid}}">{{title}}</a>
        </h2>
        </div>
        <!--ByLine <div class="lineClamp-2 text-sm text-gray-500"><a href="{{url}}" class="block1">{{excerpt words="10"}}</a></div> -->
        {{#unless feature_image}}<p class="text-base lineClamp-3 mb-4">{{excerpt words="25"}}</p>{{/unless}}
        <div class="text-sm text-gray-500 block2">
            <time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{date format="D MMMM YYYY"}}</time>
        </div>

    </div>
</article>
